<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgbgbg"
    tools:context=".QuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/berkshire_swash"
            android:text="Quiz selvii"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="italic"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/totalquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/faster_one"
            android:gravity="center"
            android:text="Quiz 1 of 5"
            android:textColor="#EDE9D5"
            android:textSize="30dp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:fontFamily="@font/black_ops_one"
            android:textColor="#0B2447"
            android:text="Pertanyaan disini yaa teman-teman!" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cornerRadius = "10dp"
        android:onClick="onClick"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/black_ops_one"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Option answer"/>

    <Button
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cornerRadius = "10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:fontFamily="@font/black_ops_one"
        android:onClick="onClick"
        android:text="Option answer"/>

    <Button
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cornerRadius = "10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:onClick="onClick"
        android:fontFamily="@font/black_ops_one"
        android:text="Option answer"/>

    <Button
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cornerRadius = "10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:onClick="onClick"
        android:fontFamily="@font/black_ops_one"
        android:text="Option answer"/>


